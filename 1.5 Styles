    <style>
        .bold {
            font-weight: bold;
        }
        .italic {
            font-style: italic;
        }
        .underline {
            text-decoration: underline;
        }
        .color {
            color: blue;
        }
        .background {
            background-color: yellow;
        }
        .font {
            font-family: Arial, sans-serif;
        }
        .size {
            font-size: 24px;
        }
        .align {
            text-align: center;
        }
        .margin {
            margin: 20px;
        }
        .padding {
            padding: 20px;
        }
        .border {
            border: 2px solid black;
        }
    </style>
</head>
